<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Thank You Message -->
    <TextView
        android:id="@+id/thankYouMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You for Your Order!"
        android:textSize="24sp"
        android:textColor="#4E2A14"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <!-- Sub Message -->
    <TextView
        android:id="@+id/subMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We hope you enjoy your drinks. Your order will be delivered shortly."
        android:textSize="16sp"
        android:textColor="#757575"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Return to Menu Button -->
    <Button
        android:id="@+id/returnToMenuButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Return to Menu"
        android:backgroundTint="#7A5230"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

    <!-- Exit App Button -->
    <Button
        android:id="@+id/exitAppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:backgroundTint="#FF7043"
        android:textColor="#FFFFFF" />
</LinearLayout>
